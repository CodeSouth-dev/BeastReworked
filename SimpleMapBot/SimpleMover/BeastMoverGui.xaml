<UserControl x:Class="BeastMover.BeastMoverGui"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BeastMover"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="450">
    <Grid x:Name="Root" DataContext="{x:Static local:BeastMoverSettings.Instance}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="10">
                <TextBlock Text="BeastMover - Simple Reliable Movement" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock Text="No movement skills required - uses default walking" FontStyle="Italic" Margin="0,0,0,20"/>
                
                <GroupBox Header="Path Generation" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <DockPanel Margin="0,0,0,10">
                            <Label Content="Path Refresh Rate (ms):" Width="180"/>
                            <TextBox Text="{Binding PathRefreshRate, UpdateSourceTrigger=PropertyChanged}" Width="80" HorizontalAlignment="Left"/>
                        </DockPanel>
                        <TextBlock Text="How often to recalculate paths (1000 = 1 second)" 
                                   FontSize="10" Foreground="Gray" TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Stuck Detection" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <DockPanel Margin="0,0,0,10">
                            <Label Content="Stuck Threshold:" Width="180"/>
                            <TextBox Text="{Binding StuckThreshold, UpdateSourceTrigger=PropertyChanged}" Width="80" HorizontalAlignment="Left"/>
                        </DockPanel>
                        <TextBlock Text="Number of stuck checks before regenerating path" 
                                   FontSize="10" Foreground="Gray" TextWrapping="Wrap" Margin="0,0,0,10"/>
                        
                        <DockPanel Margin="0,0,0,10">
                            <Label Content="Stuck Distance (meters):" Width="180"/>
                            <TextBox Text="{Binding StuckDistance, UpdateSourceTrigger=PropertyChanged}" Width="80" HorizontalAlignment="Left"/>
                        </DockPanel>
                        <TextBlock Text="Minimum distance to move to not be considered stuck" 
                                   FontSize="10" Foreground="Gray" TextWrapping="Wrap"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Logging" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <CheckBox Content="Enable Debug Logging" IsChecked="{Binding DebugLogging}" Margin="0,5,0,5"/>
                        <TextBlock Text="Shows detailed movement and pathfinding logs" 
                                   FontSize="10" Foreground="Gray" TextWrapping="Wrap" Margin="20,0,0,0"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Requirements" Margin="0,0,0,10">
                    <StackPanel Margin="10">
                        <TextBlock FontWeight="Bold" Margin="0,0,0,5">‚ö†Ô∏è Important Setup:</TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,2">‚Ä¢ Assign default Move skill to Q, W, E, R, or T in-game</TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,2">‚Ä¢ Do NOT use mouse buttons for movement</TextBlock>
                        <TextBlock TextWrapping="Wrap" Margin="0,2">‚Ä¢ BeastMover uses basic walking (no Flame Dash/etc)</TextBlock>
                    </StackPanel>
                </GroupBox>

                <Border BorderBrush="LightBlue" BorderThickness="1" Padding="10" Margin="0,10,0,0">
                    <StackPanel>
                        <TextBlock Text="üí° Debugging Tips" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock TextWrapping="Wrap">Look for [BeastMover] messages in logs to see movement activity</TextBlock>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>

